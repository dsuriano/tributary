{
  "manifest_version": 3,
  "name": "Social Media to Raindrop.io",
  "version": "1.0.0",
  "description": "Bookmark content from social media sites directly into your Raindrop.io account by simply liking, upvoting or bookmarking posts.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "*://*.youtube.com/*",
    "*://*.reddit.com/*",
    "https://api.raindrop.io/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.youtube.com/*",
        "*://*.reddit.com/*"
      ],
      "js": ["scripts/content_script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": ["scripts/site_selectors.js"],
      "matches": ["<all_urls>"]
    }
  ]
}