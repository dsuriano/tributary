{
  "name": "tributary",
  "version": "1.2.1",
  "description": "Tributary: The effortless archive for Raindrop.io.",
  "type": "module",
  "scripts": {
    "build": "npm run clean && node build/build.mjs --target=chrome && node build/build.mjs --target=firefox",
    "dev": "node build/build.mjs --watch",
    "build:chrome": "npm run clean && node build/build.mjs --target=chrome",
    "build:firefox": "npm run clean && node build/build.mjs --target=firefox",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test"
  },
  "keywords": [
    "chrome-extension",
    "raindrop",
    "tributary"
  ],
  "author": "Tributary Contributors",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.11.19",
    "@vitest/ui": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.10",
    "jsdom": "^27.0.0",
    "rimraf": "^5.0.7",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  }
}
